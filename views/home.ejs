<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

  <!-- Tailwind -->
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

  <!-- Icons -->
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.8.0/fonts/remixicon.css" rel="stylesheet"/>

  <title>CloudVault</title>

  <!-- Proper Zoom Out (NO alignment break) -->
  <style>
    body {
      zoom: 0.9; /* üëà zoom out cleanly */
    }
  </style>
</head>

<body class="bg-gradient-to-br from-slate-900 via-gray-900 to-black min-h-screen text-white">

<!-- üî¥ LOGOUT (small, corner) -->
<form action="/user/logout" method="post" class="fixed top-4 right-4 z-50">
  <button
    title="Logout"
    class="w-9 h-9 rounded-full flex items-center justify-center
           bg-white/10 hover:bg-white/20
           border border-white/20 backdrop-blur">
    <i class="ri-logout-box-r-line"></i>
  </button>
</form>

<!-- ===== HERO ===== -->
<section class="relative overflow-hidden">
  <div class="absolute inset-0 opacity-20">
    <img src="https://media.giphy.com/media/26tn33aiTi1jkl6H6/giphy.gif"
         class="w-full h-full object-cover"/>
  </div>

  <div class="relative max-w-6xl mx-auto px-6 py-16 text-center">
    <h1 class="text-4xl font-extrabold mb-3">CloudVault ‚òÅÔ∏è</h1>
    <p class="text-gray-300">
      Secure ‚Ä¢ Fast ‚Ä¢ Beautiful cloud storage
    </p>
  </div>
</section>

<!-- ===== MAIN ===== -->
<main class="max-w-6xl mx-auto px-6 -mt-10">

  <!-- Success/Error Messages -->
  <% if (uploadStatus === 'success') { %>
    <div class="bg-green-500/20 border border-green-500 text-green-300 px-4 py-3 rounded-xl mb-6 flex items-center gap-2">
      <i class="ri-check-line text-xl"></i>
      ‚úì File uploaded successfully!
    </div>
  <% } else if (uploadStatus === 'failed') { %>
    <div class="bg-red-500/20 border border-red-500 text-red-300 px-4 py-3 rounded-xl mb-6 flex items-center gap-2">
      <i class="ri-error-warning-line text-xl"></i>
      ‚úó Upload failed: <%= error || 'Unknown error' %>
    </div>
  <% } %>

  <% if (deleteStatus === 'success') { %>
    <div class="bg-green-500/20 border border-green-500 text-green-300 px-4 py-3 rounded-xl mb-6 flex items-center gap-2">
      <i class="ri-check-line text-xl"></i>
      ‚úì File deleted successfully!
    </div>
  <% } else if (deleteStatus === 'failed') { %>
    <div class="bg-red-500/20 border border-red-500 text-red-300 px-4 py-3 rounded-xl mb-6 flex items-center gap-2">
      <i class="ri-error-warning-line text-xl"></i>
      ‚úó Delete failed: <%= error || 'Unknown error' %>
    </div>
  <% } %>

  <!-- Upload Card -->
  <div class="bg-white/10 backdrop-blur-xl border border-white/20
              rounded-2xl shadow-xl p-6 mb-10">

    <form action="/upload" method="post" enctype="multipart/form-data"
          class="flex flex-col sm:flex-row items-center gap-4">

      <input
        type="file"
        name="file"
        required
        class="flex-1 file:mr-4 file:py-2 file:px-4
               file:rounded-full file:border-0
               file:bg-blue-600 file:text-white
               hover:file:bg-blue-700"/>

      <button
        type="submit"
        class="bg-blue-600 hover:bg-blue-700 px-6 py-2 rounded-xl font-semibold">
        Upload
      </button>

    </form>
  </div>

  <!-- ===== FILE GRID ===== -->
  <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8 pb-20">

    <% if (files && files.length > 0) { %>
      <% files.forEach(file => { %>

      <div class="bg-white/10 backdrop-blur-lg border border-white/20
                  rounded-2xl overflow-hidden hover:scale-[1.02] transition">

        <!-- Preview -->
        <div class="h-40 bg-black/30 flex items-center justify-center">
          <% if (file.originalName.match(/\.(jpg|jpeg|png|gif)$/i)) { %>
            <img src="<%= file.url %>" class="w-full h-full object-cover"/>
          <% } else { %>
            <i class="ri-file-3-fill text-5xl text-blue-400"></i>
          <% } %>
        </div>

        <!-- Info -->
        <div class="p-4">
          <a href="<%= file.url %>" target="_blank"
             class="block font-semibold truncate hover:underline">
            <%= file.originalName %>
          </a>

          <p class="text-xs text-gray-400 mt-1">
            <%= (file.size / 1024 / 1024).toFixed(2) %> MB ‚Ä¢
            <%= new Date(file.uploadedAt).toLocaleDateString() %>
          </p>

          <form action="/files/<%= file._id %>?_method=DELETE"
                method="post" class="mt-4">
            <button
              onclick="return confirm('Delete this file?')"
              class="w-full bg-red-500/80 hover:bg-red-600 py-2 rounded-xl text-sm">
              Delete
            </button>
          </form>
        </div>

      </div>

      <% }) %>
    <% } else { %>

      <!-- Empty State -->
      <div class="col-span-full text-center py-24">
        <img src="https://illustrations.popsy.co/gray/folder.svg"
             class="mx-auto w-48 mb-6"/>
        <h3 class="text-xl font-bold">No files yet</h3>
        <p class="text-gray-400">Upload something to get started</p>
      </div>

    <% } %>

  </div>
</main>

</body>
</html>
