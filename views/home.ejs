<!doctype html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Dashboard | CloudManager</title>
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
  <style>
    body {
      font-family: 'Inter', sans-serif;
      zoom: 0.95;
    }

    .glass {
      background: rgba(255, 255, 255, 0.05);
      backdrop-filter: blur(12px);
      border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .glass-card {
      background: rgba(255, 255, 255, 0.03);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.05);
      transition: all 0.3s ease;
    }

    .glass-card:hover {
      background: rgba(255, 255, 255, 0.08);
      border-color: rgba(255, 255, 255, 0.2);
      transform: translateY(-5px);
      box-shadow: 0 10px 30px -10px rgba(0, 0, 0, 0.5);
    }

    .btn-primary {
      background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
    }

    .btn-danger {
      background: rgba(239, 68, 68, 0.1);
      border: 1px solid rgba(239, 68, 68, 0.2);
      color: #fca5a5;
    }

    .btn-danger:hover {
      background: rgba(239, 68, 68, 0.2);
      border-color: rgba(239, 68, 68, 0.4);
      color: #f87171;
    }
  </style>
</head>

<body class="bg-gradient-to-br from-slate-900 via-gray-900 to-black min-h-screen text-white relative overflow-x-hidden">

  <!-- Background Blobs -->
  <div class="fixed top-0 left-0 w-full h-full overflow-hidden -z-10 pointer-events-none">
    <div class="absolute top-[-10%] left-[-10%] w-[500px] h-[500px] bg-blue-600/10 rounded-full blur-[120px]"></div>
    <div class="absolute bottom-[-10%] right-[-10%] w-[500px] h-[500px] bg-purple-600/10 rounded-full blur-[120px]">
    </div>
  </div>

  <!-- Logout Button -->
  <form action="/user/logout" method="post" class="fixed top-6 right-6 z-50">
    <button title="Logout" class="group flex items-center gap-2 px-4 py-2 rounded-full
             bg-white/5 hover:bg-white/10
             border border-white/10 hover:border-white/20 backdrop-blur transition-all">
      <span class="text-sm font-medium text-gray-300 group-hover:text-white transition-colors">Logout</span>
      <i class="ri-logout-box-r-line text-gray-400 group-hover:text-white transition-colors"></i>
    </button>
  </form>

  <!-- Hero Section -->
  <section class="relative pt-20 pb-12 text-center z-10">
    <div
      class="inline-block p-1 rounded-full bg-gradient-to-r from-blue-500/20 to-purple-500/20 backdrop-blur-md border border-white/10 mb-6">
      <div class="px-4 py-1 rounded-full bg-black/30">
        <span class="text-xs font-semibold tracking-wider text-blue-300 uppercase">Secure Cloud Storage</span>
      </div>
    </div>
    <h1
      class="text-5xl md:text-6xl font-extrabold mb-4 bg-clip-text text-transparent bg-gradient-to-r from-white via-gray-200 to-gray-400">
      CloudManager
    </h1>
    <p class="text-gray-400 text-lg max-w-2xl mx-auto px-4">
      Your files, secure and accessible everywhere. Experience the future of cloud storage with a beautiful, dark
      aesthetic.
    </p>
  </section>

  <!-- Main Content -->
  <main class="max-w-7xl mx-auto px-6 pb-24 relative z-10">

    <!-- Alerts -->
    <% if (uploadStatus==='success' ) { %>
      <div class="fixed bottom-6 right-6 z-50 animate-bounce-in">
        <div
          class="bg-green-500/10 border border-green-500/20 backdrop-blur-md text-green-400 px-6 py-4 rounded-xl shadow-2xl flex items-center gap-3">
          <div class="w-8 h-8 rounded-full bg-green-500/20 flex items-center justify-center">
            <i class="ri-check-line"></i>
          </div>
          <div>
            <h4 class="font-semibold text-sm">Upload Complete</h4>
            <p class="text-xs text-green-500/70">Your file has been safely stored.</p>
          </div>
        </div>
      </div>
      <% } %>

        <% if (deleteStatus==='success' ) { %>
          <div class="fixed bottom-6 right-6 z-50 animate-bounce-in">
            <div
              class="bg-red-500/10 border border-red-500/20 backdrop-blur-md text-red-400 px-6 py-4 rounded-xl shadow-2xl flex items-center gap-3">
              <div class="w-8 h-8 rounded-full bg-red-500/20 flex items-center justify-center">
                <i class="ri-delete-bin-line"></i>
              </div>
              <div>
                <h4 class="font-semibold text-sm">File Deleted</h4>
                <p class="text-xs text-red-500/70">The file has been permanently removed.</p>
              </div>
            </div>
          </div>
          <% } %>

            <!-- Upload Zone -->
            <div class="glass p-1 rounded-3xl mb-16 max-w-3xl mx-auto">
              <div class="bg-gray-900/40 rounded-[22px] p-8 text-center border border-white/5">
                <form action="/upload" method="post" enctype="multipart/form-data"
                  class="flex flex-col items-center justify-center gap-6">

                  <% if (currentFolderId) { %>
                    <input type="hidden" name="folderId" value="<%= currentFolderId %>" />
                    <% } %>

                      <div class="relative group w-full" id="drop-zone">
                        <input type="file" name="file" id="file-upload" class="hidden"
                          onchange="document.getElementById('file-label').innerText = this.files[0].name" required />
                        <label for="file-upload"
                          class="cursor-pointer flex flex-col items-center justify-center w-full h-32 border-2 border-dashed border-gray-600 rounded-2xl hover:border-blue-500/50 hover:bg-blue-500/5 transition-all">
                          <div
                            class="w-12 h-12 rounded-full bg-gray-800 flex items-center justify-center mb-3 group-hover:scale-110 transition-transform">
                            <i class="ri-upload-cloud-2-line text-2xl text-blue-400"></i>
                          </div>
                          <span id="file-label"
                            class="text-sm text-gray-400 font-medium group-hover:text-gray-300">Click or
                            drag file here</span>
                        </label>
                      </div>

                      <button type="submit"
                        class="btn-primary px-8 py-3 rounded-xl font-semibold text-white shadow-lg shadow-blue-600/20 hover:shadow-blue-600/40 transition-all active:scale-95 flex items-center gap-2">
                        <span>Upload File</span>
                        <i class="ri-arrow-right-line"></i>
                      </button>

                </form>
              </div>
            </div>

            <!-- Breadcrumb Navigation -->
            <% if (breadcrumbs && breadcrumbs.length> 0) { %>
              <div class="mb-6 px-2">
                <div class="flex items-center gap-2 text-sm">
                  <a href="/home" class="text-blue-400 hover:text-blue-300 transition-colors">Home</a>
                  <% breadcrumbs.forEach((crumb, index)=> { %>
                    <i class="ri-arrow-right-s-line text-gray-600"></i>
                    <% if (index===breadcrumbs.length - 1) { %>
                      <span class="text-gray-300">
                        <%= crumb.name %>
                      </span>
                      <% } else { %>
                        <a href="/home?folderId=<%= crumb._id %>"
                          class="text-blue-400 hover:text-blue-300 transition-colors">
                          <%= crumb.name %>
                        </a>
                        <% } %>
                          <% }) %>
                </div>
              </div>
              <% } %>

                <!-- Header with Create Folder Button -->
                <div class="flex items-center justify-between mb-8 px-2">
                  <h2 class="text-xl font-semibold text-white flex items-center gap-2">
                    <i class="ri-folder-3-line text-blue-400"></i>
                    Your Files
                  </h2>
                  <div class="flex items-center gap-4">
                    <span class="text-sm text-gray-500">
                      <%= (folders ? folders.length : 0) + (files ? files.length : 0) %> items
                    </span>
                    <button onclick="showCreateFolderModal()"
                      class="px-4 py-2 rounded-lg bg-white/5 hover:bg-white/10 border border-white/10 hover:border-white/20 transition-all flex items-center gap-2">
                      <i class="ri-folder-add-line"></i>
                      <span class="text-sm font-medium">New Folder</span>
                    </button>
                  </div>
                </div>

                <!-- Files Grid -->
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">

                  <% if (folders && folders.length> 0) { %>
                    <% folders.forEach(folder=> { %>
                      <div class="glass-card rounded-2xl overflow-hidden group relative">
                        <a href="/home?folderId=<%= folder._id %>" class="block">
                          <div class="h-48 bg-black/40 flex items-center justify-center relative overflow-hidden">
                            <i
                              class="ri-folder-3-fill text-6xl text-yellow-500/80 group-hover:text-yellow-400 transition-colors duration-300"></i>
                          </div>
                          <div class="p-5">
                            <div class="flex items-start justify-between gap-4 mb-2">
                              <h3 class="font-medium text-gray-200 truncate flex-1" title="<%= folder.name %>">
                                <%= folder.name %>
                              </h3>
                            </div>
                            <div class="flex items-center justify-between mt-4 border-t border-white/5 pt-4">
                              <span class="text-xs text-gray-500">
                                <%= new Date(folder.createdAt || Date.now()).toLocaleDateString() %>
                              </span>
                              <i
                                class="ri-arrow-right-line text-gray-500 group-hover:text-blue-400 transition-colors"></i>
                            </div>
                          </div>
                        </a>
                        <!-- Delete Button -->
                        <form action="/folder/delete/<%= folder._id %>" method="post"
                          class="absolute top-3 right-3 delete-form" data-type="folder">
                          <button type="button" onclick="showDeleteModal(this.parentElement, 'folder')"
                            title="Delete Folder"
                            class="p-2 rounded-lg bg-red-500/10 hover:bg-red-500/20 border border-red-500/20 hover:border-red-500/40 transition-all opacity-0 group-hover:opacity-100">
                            <i class="ri-delete-bin-line text-red-400"></i>
                          </button>
                        </form>
                      </div>
                      <% }) %>
                        <% } %>

                          <% if (files && files.length> 0) { %>
                            <% files.forEach(file=> { %>

                              <div class="glass-card rounded-2xl overflow-hidden group relative">

                                <!-- Preview Section -->
                                <div class="h-48 bg-black/40 flex items-center justify-center relative overflow-hidden">
                                  <% if (file.originalName.match(/\.(jpg|jpeg|png|gif|webp)$/i)) { %>
                                    <img src="<%= file.url %>"
                                      class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" />
                                    <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-colors">
                                    </div>
                                    <% } else { %>
                                      <i
                                        class="ri-file-text-line text-6xl text-gray-600 group-hover:text-blue-400 transition-colors duration-300"></i>
                                      <% } %>

                                        <!-- Hover Action -->
                                        <a href="<%= file.url %>" target="_blank"
                                          class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                                          <div
                                            class="w-12 h-12 rounded-full bg-white/10 backdrop-blur flex items-center justify-center text-white border border-white/20 hover:bg-white/20 hover:scale-110 transition-all">
                                            <i class="ri-eye-line text-xl"></i>
                                          </div>
                                        </a>
                                </div>

                                <!-- Footer Section -->
                                <div class="p-5">
                                  <div class="flex items-start justify-between gap-4 mb-2">
                                    <h3 class="font-medium text-gray-200 truncate flex-1"
                                      title="<%= file.originalName %>">
                                      <%= file.originalName %>
                                    </h3>
                                    <div class="text-gray-500 text-xs whitespace-nowrap pt-1">
                                      <%= (file.size / 1024 / 1024).toFixed(2) %> MB
                                    </div>
                                  </div>

                                  <div class="flex items-center justify-between mt-4 border-t border-white/5 pt-4">
                                    <span class="text-xs text-gray-500">
                                      <%= new Date(file.createdAt || Date.now()).toLocaleDateString() %>
                                    </span>
                                    <!-- Delete Button -->
                                    <form action="/files/delete/<%= file._id %>" method="post" class="delete-form"
                                      data-type="file">
                                      <button type="button" onclick="showDeleteModal(this.parentElement, 'file')"
                                        title="Delete File"
                                        class="px-3 py-2 rounded-lg bg-red-500/10 hover:bg-red-500/20 border border-red-500/20 hover:border-red-500/40 transition-all flex items-center gap-2">
                                        <i class="ri-delete-bin-line text-red-400"></i>
                                        <span class="text-xs text-red-400 font-medium">Delete</span>
                                      </button>
                                    </form>
                                  </div>
                                </div>

                              </div>

                              <% }) %>
                                <% } else { %>

                                  <!-- Empty State -->
                                  <div class="col-span-full py-20 text-center">
                                    <div
                                      class="w-24 h-24 rounded-full bg-gray-800/50 mx-auto flex items-center justify-center mb-6 border border-white/5">
                                      <i class="ri-folder-open-line text-4xl text-gray-600"></i>
                                    </div>
                                    <h3 class="text-xl font-semibold text-gray-300 mb-2">No files yet</h3>
                                    <p class="text-gray-500">Upload your first file to get started with CloudManager.
                                    </p>
                                  </div>

                                  <% } %>

                </div>
  </main>

  <!-- Create Folder Modal -->
  <div id="create-folder-modal"
    class="fixed inset-0 bg-black/60 backdrop-blur-sm z-50 hidden flex items-center justify-center">
    <div class="glass p-1 rounded-2xl max-w-md w-full mx-4">
      <div class="bg-gray-900/90 rounded-[14px] p-6">
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-xl font-semibold text-white">Create New Folder</h3>
          <button onclick="hideCreateFolderModal()" class="text-gray-400 hover:text-white transition-colors">
            <i class="ri-close-line text-2xl"></i>
          </button>
        </div>
        <form action="/folder/create" method="post">
          <% if (currentFolderId) { %>
            <input type="hidden" name="parentFolderId" value="<%= currentFolderId %>" />
            <% } %>
              <input type="text" name="name" id="folder-name-input" placeholder="Folder name" required
                class="w-full px-4 py-3 rounded-xl bg-white/5 border border-white/10 focus:border-blue-500 focus:outline-none text-white placeholder-gray-500 transition-colors" />
              <div class="flex gap-3 mt-6">
                <button type="button" onclick="hideCreateFolderModal()"
                  class="flex-1 px-4 py-3 rounded-xl bg-white/5 hover:bg-white/10 border border-white/10 transition-colors text-gray-300 font-medium">
                  Cancel
                </button>
                <button type="submit"
                  class="flex-1 btn-primary px-4 py-3 rounded-xl font-semibold text-white shadow-lg shadow-blue-600/20 hover:shadow-blue-600/40 transition-all">
                  Create
                </button>
              </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Delete Confirmation Modal -->
  <div id="delete-confirm-modal"
    class="fixed inset-0 bg-black/60 backdrop-blur-sm z-50 hidden flex items-center justify-center">
    <div class="glass p-1 rounded-2xl max-w-md w-full mx-4">
      <div class="bg-gray-900/90 rounded-[14px] p-6">
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-xl font-semibold text-white flex items-center gap-2">
            <i class="ri-alert-line text-red-400"></i>
            Confirm Deletion
          </h3>
          <button onclick="hideDeleteModal()" class="text-gray-400 hover:text-white transition-colors">
            <i class="ri-close-line text-2xl"></i>
          </button>
        </div>
        <p class="text-gray-300 mb-6" id="delete-message">Are you sure you want to delete this item?</p>
        <div class="flex gap-3">
          <button type="button" onclick="hideDeleteModal()"
            class="flex-1 px-4 py-3 rounded-xl bg-white/5 hover:bg-white/10 border border-white/10 transition-colors text-gray-300 font-medium">
            Cancel
          </button>
          <button type="button" onclick="confirmDelete()"
            class="flex-1 px-4 py-3 rounded-xl bg-red-500 hover:bg-red-600 font-semibold text-white shadow-lg shadow-red-600/20 hover:shadow-red-600/40 transition-all">
            Delete
          </button>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Drag and Drop Upload Functionality
    const dropZone = document.getElementById('drop-zone');
    const fileInput = document.getElementById('file-upload');
    const fileLabel = document.getElementById('file-label');
    const uploadForm = fileInput.closest('form');

    // Prevent default drag behaviors
    ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
      dropZone.addEventListener(eventName, preventDefaults, false);
      document.body.addEventListener(eventName, preventDefaults, false);
    });

    function preventDefaults(e) {
      e.preventDefault();
      e.stopPropagation();
    }

    // Highlight drop zone when item is dragged over it
    ['dragenter', 'dragover'].forEach(eventName => {
      dropZone.addEventListener(eventName, highlight, false);
    });

    ['dragleave', 'drop'].forEach(eventName => {
      dropZone.addEventListener(eventName, unhighlight, false);
    });

    function highlight(e) {
      const label = dropZone.querySelector('label');
      label.classList.add('border-blue-500', 'bg-blue-500/10');
      label.classList.remove('border-gray-600');
    }

    function unhighlight(e) {
      const label = dropZone.querySelector('label');
      label.classList.remove('border-blue-500', 'bg-blue-500/10');
      label.classList.add('border-gray-600');
    }

    // Handle dropped files
    dropZone.addEventListener('drop', handleDrop, false);

    function handleDrop(e) {
      const dt = e.dataTransfer;
      const files = dt.files;

      if (files.length > 0) {
        fileInput.files = files;
        fileLabel.innerText = files[0].name;

        // Auto-submit the form
        uploadForm.submit();
      }
    }

    // Clean URL params after toast is shown
    if (window.location.search.includes('upload=') || window.location.search.includes('delete=')) {
      const newUrl = window.location.protocol + "//" + window.location.host + window.location.pathname;
      window.history.replaceState({ path: newUrl }, '', newUrl);

      // Auto hide toasts/messages after 3 seconds
      setTimeout(() => {
        const alerts = document.querySelectorAll('.fixed.bottom-6');
        alerts.forEach(alert => {
          alert.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
          alert.style.opacity = '0';
          alert.style.transform = 'translateY(20px)';
          setTimeout(() => alert.remove(), 500);
        });
      }, 3000);
    }

    // Modal control functions
    function showCreateFolderModal() {
      const modal = document.getElementById('create-folder-modal');
      const input = document.getElementById('folder-name-input');
      modal.classList.remove('hidden');
      setTimeout(() => input.focus(), 100);
    }

    function hideCreateFolderModal() {
      const modal = document.getElementById('create-folder-modal');
      modal.classList.add('hidden');
      document.getElementById('folder-name-input').value = '';
    }

    // Delete confirmation modal functions
    let deleteFormToSubmit = null;

    function showDeleteModal(form, type) {
      deleteFormToSubmit = form;
      const modal = document.getElementById('delete-confirm-modal');
      const message = document.getElementById('delete-message');

      if (type === 'folder') {
        message.textContent = 'Are you sure you want to delete this folder and all its contents? This action cannot be undone.';
      } else {
        message.textContent = 'Are you sure you want to delete this file? This action cannot be undone.';
      }

      modal.classList.remove('hidden');
    }

    function hideDeleteModal() {
      const modal = document.getElementById('delete-confirm-modal');
      modal.classList.add('hidden');
      deleteFormToSubmit = null;
    }

    function confirmDelete() {
      if (deleteFormToSubmit) {
        deleteFormToSubmit.submit();
      }
      hideDeleteModal();
    }

    // Close modal on escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        hideCreateFolderModal();
        hideDeleteModal();
      }
    });
  </script>

</body>

</html>